{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
	"pages": [
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "首页",
                "enablePullDownRefresh": true // 开启下拉刷新
			}
		},
		{
			"path": "pages/classify/classify",
			"style": {
				"navigationBarTitleText": "商品分类"
			}
		},
		{
			"path": "pages/shoppingCart/shoppingCart",
			"style": {
				"navigationBarTitleText": "购物车"
			}
		},
		{
			"path": "pages/user/index",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationStyle":"custom"
			}
		},
		{
			"path": "pages/login/wxLogin/wxLogin",
			"style": {
				"navigationBarTitleText": "微信登录",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/register/register",
			"style": {
				"navigationBarTitleText": "注册",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/user/address/userAddress",
			"style": {
				"navigationBarTitleText": "我的地址"
			}
		},
		{
			"path": "pages/user/collection/userCollection",
			"style": {
				"navigationBarTitleText": "我的收藏"
			}
		},
		{
			"path": "pages/user/peas/userPeas",
			"style": {
				"navigationBarTitleText": "我的工游豆"
			}
		},
		{
			"path": "pages/user/browsing/userBrowsing",
			"style": {
				"navigationBarTitleText": "浏览历史"
			}
        },
		{
			"path": "pages/fit/index",
			"style": {
				"navigationBarTitleText": "设置"
			}
        },
		{
			"path": "pages/fit/fitPassword",
			"style": {
				"navigationBarTitleText": "修改密码"
			}
        },
		{
			"path": "pages/fit/fitPhone",
			"style": {
				"navigationBarTitleText": "修改手机号"
			}
        },
        // 商品
        {
            "path": "pages/goods/list",
            "style": {
                // "navigationBarTitleText": "商品列表",
                // "navigationStyle": "custom",
                "titleNView": {
                    "backgroundColor": "#ffffff",
                    "searchInput": {
                        "borderRadius": "15px",
                        "placeholder": "输入要搜索关键词",
                        "backgroundColor": "#f5f5f5",
                        "align": "left"
                    },
                    "buttons": [
                        {
                            "text": "搜索",
                            "fontSize": "15px",
                            "width": "40px"
                            // "align": "center"
                        }
                    ]
                }
            }
        },
        {
            "path": "pages/goods/detail",
            "style": {
                "navigationBarTitleText": "商品详情",
                "navigationStyle": "custom"
            }
        },
        {
            "path": "pages/login/index",
            "style": {
                "navigationBarTitleText": "登录页",
                "navigationStyle": "custom"
            }
		},
        {
            "path": "pages/index/index",
            "style": {
                // "navigationBarTitleText": "登录页"
                "navigationStyle": "custom"
            }
		},
        {
            "path": "pages/login/forget",
            "style": {
                "navigationBarTitleText": "找回密码"
                // "navigationStyle": "custom"
            }
		},
        {
            "path": "pages/login/register",
            "style": {
                "navigationBarTitleText": "注册账号"
                // "navigationStyle": "custom"
            }
		}
	],
	"globalStyle": {
		"navigationBarBackgroundColor": "white"
	},
	"tabBar": {
		"selectedColor": "#d7231e",
		"list": [
			{
				"pagePath": "pages/home/home",
				"text": "首页",
				"iconPath": "static/tabBar/home.png",
				"selectedIconPath": "static/tabBar/s_home.png"
			},
			{
				"pagePath": "pages/classify/classify",
				"text": "分类",
				"iconPath": "static/tabBar/classify.png",
				"selectedIconPath": "static/tabBar/s_classify.png"
			},
			{
				"pagePath": "pages/index/index",
				"text": "购物车",
				"iconPath": "static/tabBar/shopping.png",
				"selectedIconPath": "static/tabBar/s_shopping.png"
			},
			{
				"pagePath": "pages/user/index",
				"text": "我的",
				"iconPath": "static/tabBar/personal.png",
				"selectedIconPath": "static/tabBar/s_personal.png"
			}
		]
	}
}
